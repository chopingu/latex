\ProvidesPackage{Styl}

% abstract 
\renewcommand{\abstractname}{\scshape{abstract} \\[0.15cm] \rule{2cm}{0.2mm}}
\newenvironment{argument}{\begin{abstract} \footnotesize}{\end{abstract}}

% keyword
\newcommand{\keywords}[1] {
    \centerline{
        \small
        \textbf{\scshape{Keywords ---}} #1
    }
}

% toc
\renewcommand\contentsname{\Huge \scshape{Contents} \bigskip}

% epigraphs and poetry
\newcommand{\attr}[1]{ \begin{flushright} \scriptsize \streck\hspace{1ex}#1 \end{flushright}}

\newcommand{\epigraph}[1]{\begin{quote}\footnotesize #1 \end{quote} }
